



{
	"compileOnSave": true,
	"compilerOptions": {
		"declaration": false,
		"diagnostics": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es2017",
			"dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "Root",
		"removeComments": false,
		"rootDir": "Root",
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"exclude": [
		"node_modules"
	]
}


